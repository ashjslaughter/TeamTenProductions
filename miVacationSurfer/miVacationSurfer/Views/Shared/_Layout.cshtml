<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MI Vacation Surfer</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/jquery.bxslider.min.js")
    @Styles.Render("~/Content/jquery.bxslider.css")
    @Styles.Render("~/Content/showtime.css")


    <link href='http://fonts.googleapis.com/css?family=Cabin:500,600' rel='stylesheet' type='text/css'>



</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav text-uppercase">
                    <li>@Html.ActionLink("MI Vacation Surfer", "Index", "Home")</li>
                    <li>@Html.ActionLink("Create a Review", "ChooseReview", "Home")</li>
                    <li>@Html.ActionLink("Find a Vacation", "ChooseVacation", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    
                    
                  
                    
                    @*<li>@Html.ActionLink("Locations", "Index", "Location")</li>
                        <li>@Html.ActionLink("Location Review", "Index", "LocationReview")</li>
                        <li>@Html.ActionLink("Activities", "Index", "Activity")</li>
                        <li>@Html.ActionLink("Activity Reviews", "Index", "ActivityReview")</li>*@

                </ul>


            
                @Html.Partial("_LoginPartial")
                @Html.Partial("_SearchPartial")

                @*<form class="navbar-form navbar-right">
                    <input type="text" class="form-control row-col-lg-8" placeholder="Search"> <input type="submit" value="Search" />
                </form>*@
            </div>
        </div>
    </div>
    <br><br><br>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.Year - MI Vacation Surfer</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
